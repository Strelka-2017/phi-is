.Animation
   min-height 400px
   text-align center
   color white
   display flex
   justify-content center // horizontal
   align-items center // vertical


// General Diagram styles

.diagram
   position relative
   width 90%
   img
      width 100%
   @media only screen and (max-width: 601px)
      width 110%

.diagram-padding
   width 100%
   margin 0 auto

.diagram-absolute
   position absolute


// About

.about-images
   position relative
   top -100px
   img
      width 30%
      position relative
   .about-create
      top -150px
      left 150px
   .about-simulate
      left 250px
   .about-invest
      top 150px
      left 150px
   .about-reorganize
      top 200px
      left -150px


// Create

.create-frames
   position relative
   text-align center !important
   margin-top -150px

   .create-frame
      background-image url('../images/create-frames-stacked-min.png')
      max-width 100%
      background-size 100%
      display block
      position absolute

      &.hidden
         opacity 0

   .create-frame-0
      background-position 0 0%
   .create-frame-1
      background-position 0 9.090909%
   .create-frame-2
      background-position 0 18.181818%
   .create-frame-3
      background-position 0 27.272727%
   .create-frame-4
      background-position 0 36.363636%
   .create-frame-5
      background-position 0 45.454545%
   .create-frame-6
      background-position 0 54.545455%
   .create-frame-7
      background-position 0 63.636364%
   .create-frame-8
      background-position 0 72.727273%
   .create-frame-9
      background-position 0 81.818182%
   .create-frame-10
      background-position 0 90.909091%
   .create-frame-11
      background-position 0 100%


// Simulate

.simulate-line
   stroke black // blue // black // #88CE02
   stroke-width 2px

.simulate-line2
   stroke-width 2px
   stroke-dasharray 5px


// Invest

