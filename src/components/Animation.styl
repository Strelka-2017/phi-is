.Animation
   min-height 400px
   text-align center
   color white
   display flex
   justify-content center // horizontal
   align-items center // vertical

.diagram
   position relative
   width 100%
   img
      width 100%

.diagram-absolute
   position absolute

.simulate-line
   stroke black // blue // black // #88CE02
   stroke-width 2px

.simulate-line2
   // stroke rgba(0,0,0,0.1) // rgba(255,255,255,0.5)
   stroke-width 2px
   stroke-dasharray 5px

