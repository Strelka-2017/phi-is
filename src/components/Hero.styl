.Hero
   margin-top 3em
   min-height 600px // 500px
   text-align center
   color white
   display flex
   justify-content center // horizontal
   align-items center // vertical

   h1
      padding 0.5em 0

      @media only screen and (max-width: 601px)
         font-size 3em

   h2
      font-size 2em
      display inline
      background-color blue
      color white
      border-radius radius
      padding 0.5em
      opacity 0.9

   button
      width 100%
      transition all fast ease-in-out
      border 2px solid blue
      background-color blue
      color white
      border-radius radius
      padding 1em
      font-size 22px
      text-align center
      opacity 0.9

      span
         font-size 14px
         display block
         padding-bottom 5px

      &:hover
         opacity 1
         transform translateY(-5px)

      &.alt
         background-color white
         border-color white
         color blue

.buttons
   // padding-top 2em
   max-width 700px
   margin 0 auto
   text-transform uppercase
   text-align center

   .svg-icon
      transition all medi ease-in-out
      margin 0 auto
      opacity 0.8
      max-width 200px

      &:hover
         opacity 1
         transform translateY(-5px)

      svg
         width 100%

#adjectives
   div
      display inline
      position relative
      border-bottom 3px solid white

      &.hidden
         opacity 0
         display none
