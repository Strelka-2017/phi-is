.App
   min-height 100%
   text-align center

   max-width 1400px
   margin 0 auto
   padding 0.5em

   @media only screen and (min-width: 601px)
      padding 2em

   @media only screen and (min-width: 993px)
      padding 3em

.bg-grid
   background-image url('../images/grid.png')
   background-position center center
   width 100%
   height 100%
   position fixed
   opacity 0.5
   top 0
   left 0
   z-index -1
   pointer-events none
