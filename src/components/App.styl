.App
   position relative
   text-align center
   overflow hidden

.bg-gradients
   background-image linear-gradient(to bottom, bg_blue, bg_purple, bg_pink, bg_peach, bg_yellow, bg_aqua, bg_purple, bg_plum, bg_vimto, bg_purple2)
   position absolute
   top 0
   left 0
   width 100%
   height 101%
   // margin-bottom 100px !important
   z-index -1

.bg-gradient
   background-image linear-gradient(to bottom, bg_blue, bg_purple)
   position fixed
   display block
   left 0
   top 0
   height 100%
   width 100%
   z-index -1

.bg-gradient-hide
   opacity 0

.bg-gradient-header
   background-image linear-gradient(to bottom, bg_blue, bg_purple)
   // opacity 1 // need to set this in javascript - unfortunately

.bg-gradient-about
   background-image linear-gradient(to bottom, bg_purple, bg_pink)

.bg-gradient-create
   background-image linear-gradient(to bottom, bg_pink, bg_peach)

.bg-gradient-simulate
   background-image linear-gradient(to bottom, bg_peach, bg_yellow)

.bg-gradient-invest
   background-image linear-gradient(to bottom, bg_yellow, bg_aqua)

.bg-gradient-reorganize
   background-image linear-gradient(to bottom, bg_aqua, bg_plum)

.bg-gradient-contact
   background-image linear-gradient(to bottom, bg_plum, bg_vimto)

.bg-gradient-footer
   background-image linear-gradient(to bottom, bg_vimto, bg_purple2)

.bg-margin
   // margin 1.5em
   top 0em !important
   left 0em !important
   right 0em !important
   bottom 0em !important
   width auto !important

   @media only screen and (min-width: 401px)
      top 0.5em !important
      left 0.5em !important
      right 0.5em !important
      // bottom 0.5em !important

   @media only screen and (min-width: 601px)
      top 1em !important
      left 1em !important
      right 1em !important
      // bottom 1em !important

   @media only screen and (min-width: 993px)
      top 1.5em !important
      left 1.5em !important
      right 1.5em !important
      // bottom 1.5px !important
      margin-bottom 1.5em

.bg-frame
   border 0

   @media only screen and (min-width: 401px)
      border 1px solid rgba(255,255,255,0.3)

.bg-grid
   background-image url('../images/grid.png')
   background-position center -1px
   position absolute
   left 0
   top 0
   height 100%
   width 100%
   z-index -1
   opacity 0.5
   // margin-bottom 100px !important

.bg-mountains
   background-image url('../images/mountains.png')
   background-repeat no-repeat
   background-position center 1200px // background-position center 0px
   background-size 100% auto
   position absolute // fixed
   left 0
   top 0 // -700px
   height 4000px
   width 100%
   z-index -1
   opacity 0.5

   @media only screen and (max-width: 601px)
      background-image none
