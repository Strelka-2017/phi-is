/*
  This file contains basic typography styles.
*/

// Fonts - import any fonts here.
@import url(https://fonts.googleapis.com/css?family=Nunito)

// Default font-family and text size for the whole app
html
  font-family Nunito
  font-size 16px
  font-family sans-serif

// Text and div alignment
.center
  text-align center
.right
  text-align right
.left
  text-align left
.block
  display block
.inline
  display inline
.inline-block
  display inline-block

// Links
a
  text-decoration none

// Headings
h1
  font-weight 400
  text-align center
  font-size 4rem
  margin 2rem 0
  letter-spacing -1px
  a
    color white
    text-decoration none
    &:focus
      outline 0

h2
  font-weight 300
  font-size 2.5em
  padding 0 1em

// Basic HTML elements
p
  font-size 1.6rem
  line-height 1.5
  color white
